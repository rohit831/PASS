<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gr.pass.Register"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="2dp"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:singleLine="true"
        android:gravity="bottom"
        android:id="@+id/register_name"
        style="@style/Base.TextAppearance.AppCompat.Title" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:layout_weight="2"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:hint="Mobile No."
        android:gravity="bottom"
        android:id="@+id/register_mobile_no"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:singleLine="true"
        android:textColorHint="#666666"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:hint="Password"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:id="@+id/register_password"/>

    <EditText
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:singleLine="true"
        android:textColorHint="#666666"
        android:gravity="bottom"
        android:hint="Connfirm Password"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:id="@+id/register_confirm_password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/rectangle_shape_red"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:onClick="register_button_onClick"
        android:id="@+id/reister_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
